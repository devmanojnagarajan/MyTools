<Window x:Class="MyTools.CategorySelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Categories"
        Height="550" Width="400"
        MinHeight="450" MinWidth="320"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search Box -->
        <TextBox x:Name="SearchBox"
                 Grid.Row="0"
                 Margin="0,0,0,10"
                 Padding="5"
                 Text=""
                 ToolTip="Search categories"
                 HorizontalAlignment="Stretch"
                 TextChanged="SearchBox_TextChanged"/>

        <!-- Category Label -->
        <TextBlock Grid.Row="1" Text="Select Categories:" FontWeight="SemiBold" Margin="0,0,0,5"/>

        <!-- Category List -->
        <ListBox x:Name="CategoryListBox"
                 Grid.Row="2"
                 SelectionMode="Multiple"
                 Margin="0,0,0,10"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 HorizontalContentAlignment="Stretch"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding Name}"
                              IsChecked="{Binding IsSelected, Mode=TwoWay}"
                              Margin="2"
                              HorizontalAlignment="Stretch"
                              Checked="Category_CheckChanged"
                              Unchecked="Category_CheckChanged"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Select All / Clear All Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Button Content="Select All" MinWidth="80" Margin="5,0" Padding="10,5" Click="SelectAll_Click"/>
            <Button Content="Clear All" MinWidth="80" Margin="5,0" Padding="10,5" Click="ClearAll_Click"/>
        </StackPanel>

        <!-- View Selection -->
        <Grid Grid.Row="4" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Default View:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>
            <ComboBox x:Name="ViewComboBox"
                      Grid.Column="1"
                      Padding="5"
                      HorizontalAlignment="Stretch"
                      SelectionChanged="ViewComboBox_SelectionChanged"/>
            <Button x:Name="SelectViewButton"
                    Grid.Column="2"
                    Content="Select View"
                    MinWidth="80"
                    Margin="10,0,0,0"
                    Padding="10,5"
                    Click="SelectView_Click"/>
        </Grid>

        <!-- Current Selected View Display -->
        <Border Grid.Row="5" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                Background="#F5F5F5"
                Padding="10"
                Margin="0,0,0,15"
                CornerRadius="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Current View:" 
                           FontWeight="SemiBold" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBlock x:Name="CurrentViewTextBlock"
                           Grid.Column="1" 
                           Text="No view selected"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           FontStyle="Italic"
                           Foreground="Gray"/>
            </Grid>
        </Border>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
            <Button x:Name="CreateViewButton"
                    Content="Create View"
                    MinWidth="100"
                    Margin="5,0"
                    Padding="15,8"
                    FontWeight="SemiBold"
                    IsEnabled="False"
                    Click="CreateView_Click"/>
            <Button Content="Cancel"
                    MinWidth="80"
                    Margin="5,0"
                    Padding="15,8"
                    Click="Cancel_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>