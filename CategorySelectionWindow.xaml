<Window x:Class="MyTools.CategorySelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Categories"
        Height="550" Width="400"
        MinHeight="450" MinWidth="320"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search Box -->
        <TextBox x:Name="SearchBox"
                 Grid.Row="0"
                 Margin="0,0,0,10"
                 Padding="5"
                 Text=""
                 ToolTip="Search categories"
                 HorizontalAlignment="Stretch"
                 TextChanged="SearchBox_TextChanged"/>

        <!-- Category Label -->
        <TextBlock Grid.Row="1" Text="Select Categories:" FontWeight="SemiBold" Margin="0,0,0,5"/>

        <!-- Category List -->
        <ListBox x:Name="CategoryListBox"
                 Grid.Row="2"
                 SelectionMode="Multiple"
                 Margin="0,0,0,10"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 HorizontalContentAlignment="Stretch"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding Name}"
                              IsChecked="{Binding IsSelected, Mode=TwoWay}"
                              Margin="2"
                              HorizontalAlignment="Stretch"
                              Checked="Category_CheckChanged"
                              Unchecked="Category_CheckChanged"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Select All / Clear All Buttons -->
        <StackPanel Grid.Row="3" Orientation="Vertical" HorizontalAlignment="Stretch" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                <Button Content="Select All" MinWidth="80" Margin="5,0" Padding="10,5" Click="SelectAll_Click"/>
                <Button Content="Clear All" MinWidth="80" Margin="5,0" Padding="10,5" Click="ClearAll_Click"/>
            </StackPanel>

            <!-- Selection Sets -->
            <Border BorderBrush="LightGray" BorderThickness="1" Padding="8" CornerRadius="3" Background="#FAFAFA">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Set 1 -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                        <Button x:Name="LoadSet1Button" Content="Load Set 1" MinWidth="70" Margin="2,0" Padding="8,4" FontSize="11" Click="LoadSet1_Click"/>
                        <Button x:Name="SaveSet1Button" Content="Save Set 1" MinWidth="70" Margin="2,0" Padding="8,4" FontSize="11" Click="SaveSet1_Click"/>
                    </StackPanel>

                    <!-- Set 2 -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                        <Button x:Name="LoadSet2Button" Content="Load Set 2" MinWidth="70" Margin="2,0" Padding="8,4" FontSize="11" Click="LoadSet2_Click"/>
                        <Button x:Name="SaveSet2Button" Content="Save Set 2" MinWidth="70" Margin="2,0" Padding="8,4" FontSize="11" Click="SaveSet2_Click"/>
                    </StackPanel>

                    <!-- Set Labels -->
                    <TextBlock x:Name="Set1Label" Grid.Row="1" Grid.Column="0" Text="(Empty)" FontSize="10" Foreground="Gray" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="Set2Label" Grid.Row="1" Grid.Column="1" Text="(Empty)" FontSize="10" Foreground="Gray" HorizontalAlignment="Center"/>
                </Grid>
            </Border>
        </StackPanel>

        <!-- View Selection -->
        <Grid Grid.Row="4" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Default View:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>
            <ComboBox x:Name="ViewComboBox"
                      Grid.Column="1"
                      Padding="5"
                      HorizontalAlignment="Stretch"
                      SelectionChanged="ViewComboBox_SelectionChanged"/>
            <Button x:Name="SelectViewButton"
                    Grid.Column="2"
                    Content="Select View"
                    MinWidth="80"
                    Margin="10,0,0,0"
                    Padding="10,5"
                    Click="SelectView_Click"/>
        </Grid>

        <!-- Current Selected View Display -->
        <Border Grid.Row="5" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                Background="#F5F5F5"
                Padding="10"
                Margin="0,0,0,15"
                CornerRadius="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Current View:" 
                           FontWeight="SemiBold" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBlock x:Name="CurrentViewTextBlock"
                           Grid.Column="1" 
                           Text="No view selected"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           FontStyle="Italic"
                           Foreground="Gray"/>
            </Grid>
        </Border>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
            <Button x:Name="CreateViewButton"
                    Content="Create View"
                    MinWidth="100"
                    Margin="5,0"
                    Padding="15,8"
                    FontWeight="SemiBold"
                    IsEnabled="False"
                    Click="CreateView_Click"/>
            <Button Content="Cancel"
                    MinWidth="80"
                    Margin="5,0"
                    Padding="15,8"
                    Click="Cancel_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>